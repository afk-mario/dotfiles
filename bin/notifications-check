#!/bin/bash

notifications=$(makoctl list)

EMPTY=""
NOTIFICATIONS="î‚¸"
TEXT=$EMPTY
CLASS="-off"
TOOLTIP="Dismiss all notifications"

if [[ -n "$notifications" ]]; then
  TEXT=$NOTIFICATIONS
  CLASS="-on"
fi

jq --compact-output \
  --null-input \
  --arg text "$TEXT" \
  --arg tooltip "$TOOLTIP" \
  --arg class "$CLASS" \
  '{"text": $text, "tooltip": $tooltip, "class": $class}'
